@model Debit.Entity.Employee

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Update Employee Information</h2>

@using (Html.BeginForm("Edit", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset style="margin-left:160px">


        @Html.HiddenFor(model => model.EmployeeID)

        <div class="editor-label">
            @Html.LabelFor(model => model.EmployeeName)
        </div>
        <div class="editor-label">
            @Html.EditorFor(model => model.EmployeeName)
            @Html.ValidationMessageFor(model => model.EmployeeName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.EmployeeSurName)
        </div>
        <div class="editor-label">
            @Html.EditorFor(model => model.EmployeeSurName)
            @Html.ValidationMessageFor(model => model.EmployeeSurName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.RoleId)
        </div>
        <div class="editor-label">
            @Html.EditorFor(model => model.RoleId)
            @Html.ValidationMessageFor(model => model.RoleId)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Salary)
        </div>
        <div class="editor-label">
            @Html.EditorFor(model => model.Salary)
            @Html.ValidationMessageFor(model => model.Salary)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Phone)
        </div>
        <div class="editor-label">
            @Html.EditorFor(model => model.Phone)
            @Html.ValidationMessageFor(model => model.Phone)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.EmployeePhoto)
        </div>
        <div class="editor-field">
            <img src="~/Upload/@Model.EmployeePhoto" width="100" height="100" />
            <input type="file" name="photoPath" id="photoPath" />
            @Html.ValidationMessageFor(model => model.EmployeePhoto)
        </div>

    </fieldset>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Update" class="btn btn-warning" />
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "List")
</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
